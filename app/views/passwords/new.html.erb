
  <div id="clearance" class="password-reset well text-center">
  <h2 class="title">Sign up</h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="text-field">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email' %>
    </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>
  </div>
